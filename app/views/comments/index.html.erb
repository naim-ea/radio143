<% @comments.each do |comment| %>
    <p class="h6"><%= comment.content %></p>
    <p><i>by <%= User.find(comment.user_id).username %></i></p>
    <% if(comment.user_id == current_user.id || @post.user_id == current_user.id) %>
        <%= link_to "Delete Comment", post_comment_path(comment.post_id, comment.id), method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
 <% end %>