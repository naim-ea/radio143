<div class="container">
  <h1 class="display-1"><%= t('createPost') %</h1>
  <%= form_for @post do |f| %>
    <div class="form-group mt-2">
      <%= f.label ':title %><br>
      <%= f.text_field :title, placeholder: 'Insérez votre titre...', class: "form-control" %><br><br>
    </div>

    <div class="form-group">
      <%= f.label :subtitle %><br>
      <%= f.text_area :subtitle, placeholder: 'Insérez votre sous-titre...', class: "form-control" %><br><br>
    </div>

    <div class="form-group">
      <%= f.label ':content' %><br>
      <%= f.text_area :content, placeholder: 'Insérez le contenu de votre article', class: "form-control" %><br><br>
    </div>

    <%= f.submit t('submit'), class: "btn btn-primary" %>
  <% end %>
</div>
